 <h1 class="h4 text-gray-900 mb-4 text-center">ログイン</h1>
  <hr>
  <div class="container">
    <div class="justify-content-center row">
      <%= form_for(:session, url: sessions_path) do |f| %>
      <div class="col-md-offset-3 form-group">
        <%= f.label :email, 'メールアドレス'%>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="col-md-offset-3 form-group">
        <%= f.label :password, 'パスワード'%>
        <%= f.password_field :password, autocomplete: "new-password", type: "password", class: "form-control", id: "exampleInputPassword" %>
      </div>
      <div class="col-md-offset-3 form-group">
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>パスワードを記憶する</span>
        <% end %>
      </div>
    <div class="form-group text-center">
      <%= f.submit "登録" , class: "btn btn--orange" %>  
    </div>
  <% end %>
  <div class="row text-center link-registration">
    <%= link_to 'カメラマン新規登録', new_photographer_path%>
  </div>
  </div>
</div>