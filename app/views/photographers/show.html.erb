<div class="container">
  <div class="row d-flex align-items-center">
    <ul class="photographer">
      <li>
        <%= gravatar_for @photographer %>
        <span class="profile-name"><%=  @photographer.name %></span>
      </li>
      <li><%= @photographer.descript %></li>
    </ul>  
  </div>
  <% if logged_in? %>
  <div class="row">
    <div class="center-block text-center">
    <%= link_to new_photographer_post_path(photographer_id: @photographer.id), :method => :get do %>
      <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-plus-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
      <path fill-rule="evenodd" d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
      </svg>パッケージ登録
    <% end %>
  <% end %>
    <hr>
    </div>
      <div class="row text-center">
      <% @photographer.posts.each do |post| %>
        <%= link_to image_tag(post.images[0].to_s), photographer_post_path(photographer_id: @photographer.id, id: post.id) %>
        <h4><%= post.title %></h4>
        <div>
        <%= link_to "パッケージ編集", edit_photographer_post_path(photographer_id: @photographer.id), class: 'btn btn--orange' %> 
        </div> 
        <hr>
      <% end %>
      <% paginate @posts %>
    </div>
  </div>
</div>

    