<div class="container">
  <div class="justify-content-center row">
  <%= form_for(@photographer) do |f| %>
    <%= render 'shared/error_messages', object: @photographer %>
    <h1 class="h4 text-gray-900 mb-4 text-center">プロフィール編集ページ</h1>
    <hr>
     <%= render 'shared/error_messages' %>
      <div class="col-md-offset-3 form-group">
        <%= f.label :descript, '自己紹介'%>
        <%= f.text_field :descript, class: "form-control" %>
      </div>
      <div class="col-md-offset-3 form-group">
        <%= f.label :name, '名前'%>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="col-md-offset-3 form-group">
        <%= f.label :address, '住所'%>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="col-md-offset-3 form-group">
        <%= f.label :email, 'メールアドレス'%>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="col-md-offset-3 form-group">
        <%= f.label :password, "パスワード変更(６文字)" %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="col-md-offset-3 form-group">
        <%= f.label :password_confirmation, "パスワード確認用" %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="gravatar_edit col-md-offset-3">
        <%= gravatar_for @photographer %>
        <a href="http://gravatar.com/emails" target="_blank">アイコンを変更する</a>
      </div>
    <div class="form-group text-center">
      <%= f.submit "登録" , class: "btn btn-primary" %>  
    </div>
  <% end %>
  </div>
</div>