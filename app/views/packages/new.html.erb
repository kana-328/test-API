<div class="container package-new-area">
  <%= form_for(@package, url:  photographer_packages_path) do |f| %>
    <div class="col-md-offset-2 form-group">
      <%= f.label :day, '日付(必須)' %>
      <%= f.date_field :day, include_blank: true , class: 'form-control'%>
    </div>
    <div class="col-md-offset-2 form-group">
      <%= f.label :title, 'タイトル(必須)'%>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="col-md-offset-2 form-group">
      <%= f.label :descript, '説明'%>
      <%= f.text_area :descript, class: "form-control" %>
    </div>
    <div class="form-group text-center">
      <%= f.submit "登録" , class: "btn btn-primary" %>  
    </div>
  <% end %>
</div>