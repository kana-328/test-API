<div class="swiper-container">
    <!-- 全スライドをまとめるラッパー -->
    <div class="swiper-wrapper">
        <!-- 各スライド -->
      <% @package.images.each do |image| %>
      <div class="swiper-slide">
        <%= image_tag image.to_s, class: 'package-top-image' %>
      </div>
      <% end %>
    </div>
    <!-- ページネーションを表示する場合 -->
    <div class="swiper-pagination"></div>
    <!-- 前後スライドへのナビゲーションボタン(矢印)を表示する場合 -->
    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
 
    <!-- スクロールバーを表示する場合 -->
    <div class="swiper-scrollbar"></div>
</div>
<div class="container text-center">
  <div class="row">
  </div>
  <div class="row">
    <h2><%= @package.title %></h2>
    <hr>
  </div>
  <div class="row">
    <%= gravatar_for @package.photographer %>
    <%= link_to @package.photographer.name, photographer_path(@package.photographer.id) %>
    <hr>
  </div>
  <div class="row">
    <h4>エリア</h4>
      <%= @package.prefecture.name %><%= @package.city.name %>
    <hr>
  </div>
  <div class="row">
    <h4>説明</h4>
    <%= @package.descript %>
  </div>
  <hr>
  <div class="row">
    <h4>料金</h4>
    <%= @package.price %>
  </div>
  <hr>
  <div class="row">
  <h4>可能曜日</h4>
    <% @day.each do |day| %>
    <%= day %>
    <% end %>
  </div>
    <hr>
  <div class="row">
    <%= link_to "依頼する", "#" , class: 'btn btn--orange'%>
  </div>
</div>