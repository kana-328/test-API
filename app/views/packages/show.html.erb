<div class="container text-center">
  <div class="row">
  <% @package.images.each do |image| %>
    <%= image_tag image.to_s, class: 'package-top-image' %>
  <% end %>
  </div>
  <div class="row">
    <h2><%= @package.title %></h2>
    <hr>
  </div>
  <div class="row">
    <%= gravatar_for @package.photographer %>
    <%= link_to @package.photographer.name, photographer_path(@package.photographer.id) %>
    <hr>
  </div>
  <div class="row">
    <%= @package.descript %>
  </div>
    <hr>
  <div class="row">
    <%= link_to "依頼する", "#" , class: 'btn btn--orange'%>
    <%= link_to "編集する", edit_photographer_package_path(photographer_id: @package.photographer.id ) , class: 'btn btn--orange'%>
  </div>
</div>