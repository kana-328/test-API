<% @post.images.each do |image| %>
  <%= image_tag image.to_s, class: 'post-top-image' %>
<% end %>
<div class="container text-center">
  <div class="row">
  </div>
  <div class="row">
    <h2><%= @post.title %></h2>
    <hr>
  </div>
  <div class="row">
    <%= gravatar_for @post.photographer %>
    <%= link_to @post.photographer.name, photographer_path(@post.photographer.id) %>
    <hr>
  </div>
  <div class="row">
    <h4>エリア</h4>
      <%= @post.prefecture.name %><%= @post.city.name %>
    <hr>
  </div>
  <div class="row">
    <h4>説明</h4>
    <%= @post.descript %>
  </div>
  <hr>
  <div class="row">
    <h4>料金</h4>
    <%= @post.price %>
  </div>
  <hr>
  <div class="row">
    <%= link_to "依頼する", "#" , class: 'btn btn--orange'%>
  </div>
</div>