<div class="container text-center">
  <div class="row">
  <% @package.images.each do |image| %>
    <%= image_tag image.to_s, class: 'package-top-image' %>
  <% end %>
  </div>
  <div class="row">
    <h2><%= @package.title %></h2>
    <hr>
  </div>
  <div class="row">
    <%= @package.photographer.image %>
    <%= link_to @package.photographer.name, photographer_path(@package.photographer.id) %>
    <hr>
  </div>
  <div class="row">
    <%= @package.descript %>
  </div>
</div>